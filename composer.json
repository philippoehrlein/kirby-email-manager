{
  "name": "philippoehrlein/kirby-email-manager",
  "description": "A Kirby plugin for managing email templates",
  "type": "kirby-plugin",
  "version": "1.0.0",
  "license": "proprietary",
  "homepage": "https://email-manager.philippoehrlein.de",
  "support": {
    "issues": "https://github.com/philippoehrlein/kirby-email-manager/issues",
    "source": "https://github.com/philippoehrlein/kirby-email-manager",
    "docs": "https://email-manager.philippoehrlein.de",
    "email": "github@philippoehrlein.de"
  },
  "authors": [
    {
      "name": "Philipp Oehrlein",
      "email": "github@philippoehrlein.de"
    }
  ],
  "require": {
    "php": ">=8.1.0",
    "symfony/console": "^7.2",
    "getkirby/cli": "^1.0"
  },
  "require-dev": {
    "getkirby/cms": "^4.0",
    "phpunit/phpunit": "^9.5",
    "phpstan/phpstan": "^1.10"
  },
  "autoload": {
      "psr-4": {
          "KirbyEmailManager\\": "lib/"
      }
  },
  "autoload-dev": {
      "psr-4": {
          "KirbyEmailManager\\Tests\\": "tests/"
      }
  },
  "extra": {
      "kirby-cms-path": "../../../kirby"
  },
  "config": {
    "allow-plugins": {
      "getkirby/composer-installer": true
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:coverage": "phpunit --coverage-html test/coverage",
    "analyse": "phpstan analyse --memory-limit=512M",
    "check": [
      "Composer\\Config::disableProcessTimeout",
      "@php commands/check-templates.php"
    ],
    "inspect": [
      "Composer\\Config::disableProcessTimeout",
      "@php commands/inspect-templates.php inspect:templates"
    ]
  }
}
